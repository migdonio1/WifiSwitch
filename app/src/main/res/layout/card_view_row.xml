<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deviceText"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/card_view_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Salon CC5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/card_view_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view_original_text"
                    android:text="Activo"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceText"
                android:layout_marginTop="15dp"
                android:id="@+id/sensorText">

                <TextView
                    android:id="@+id/card_view_switch_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0 Switches"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/card_view_sensor_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0 Sensores"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>